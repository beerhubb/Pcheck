@model ProjectCheck.Models.insertdata

@{
    ViewData["Title"] = "insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>เพิ่มข้อมูล</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="insert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pictrue" class="control-label"></label>
                <input asp-for="pictrue" class="form-control" />
                <span asp-validation-for="pictrue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="detail" class="control-label"></label>
                <input asp-for="detail" class="form-control" />
                <span asp-validation-for="detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="radio" asp-for="status" id="gender" value="1"> อะไหล่
                <input type="radio" asp-for="status" id="gender" value="2"> รถ
            </div>
            <div class="form-group">
                <input type="submit" value="เพิ่มข้อมูล" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
