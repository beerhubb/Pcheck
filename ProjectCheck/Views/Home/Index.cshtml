@model IEnumerable<ProjectCheck.Models.insertdata>
@using System.Linq;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.cardekho.com/images/uploadimages/1509507889716/ccp.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://images.cardekho.com/images/uploadimages/1509507889716/ccp.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://images.cardekho.com/images/uploadimages/1509507889716/ccp.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div> <!--img End-->

<div class="container-fluid mt-3">
    <div class="cars-section area-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 site-heading ">
                    <h2>อะไหล่ที่เข้าใหม่</h2>
                    <div class="divider"></div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    @if (item.status == "1")
                    {
                        
                        <div class="col-sm-6 col-md-3 text-center">
                            <div class="used-cars-box">
                                <div class="used-cars-img">
                                    <img class="img-responsive col-md-12" src="@Html.DisplayFor(model => item.pictrue)">
                                </div>
                                <div class="used-cars-title">
                                    <h3><b>@Html.DisplayFor(model => item.name)</b></h3>
                                    <h4>@Html.DisplayFor(model => item.detail)</h4>
                                    <h4>ราคา : @Html.DisplayFor(model => item.price)</h4>
                                </div>
                                @Html.ActionLink("รายละเอียด", "detail", new { id = item._id }, new { @class = "btn btn-warning" })
                            </div>
                        </div> <!-- End Col -->

                    }
                }
            </div>
        </div>
    </div>
</div><!-- End new1-->

